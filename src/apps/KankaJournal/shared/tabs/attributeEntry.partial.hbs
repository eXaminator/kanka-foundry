{{#if (kankaIsOneOf attribute.type 'section')}}
    <dt class="section {{#if (kankaIsSecret attribute) }}-secret{{/if}}">{{ attribute.name }}</dt>
{{/if}}

{{#if (kankaIsOneOf attribute.type 'checkbox')}}
    <dt class="{{#if (kankaIsSecret attribute) }}-secret{{/if}}">{{ attribute.name }}</dt>
    <dd>
        {{#if (kankaToInt attribute.value)}}
            {{ kankaLocalize 'journal' 'shared' 'value' 'yes' }}
        {{else}}
            {{ kankaLocalize 'journal' 'shared' 'value' 'no' }}
        {{/if}}
    </dd>
{{/if}}

{{#if (kankaIsOneOf attribute.type 'text' 'number' '' null)}}
    <dt class="{{#if (kankaIsSecret attribute) }}-secret{{/if}}">{{ attribute.name }}</dt>
    <dd>{{{ kankaNl2br (kankaReplaceMentions attribute.parsed) }}}</dd>
{{/if}}