<ul class="kanka-cards">
    {{#each (kankaFilterAccessible entity.relations)}}
        {{#with this as | rel | }}
            {{#with (kankaFindReference target_id) as | ref | }}
                <li class="kanka-card {{#if (kankaIsSecret rel ref) }}-secret{{/if}}">
                    <div class="kanka-avatar" {{#if rel.colour}}style="--highlight-color: {{ rel.colour }}"{{/if}}>
                        {{#if rel.attitude}}
                            <span>{{ rel.attitude }}</span>
                        {{/if}}
                        {{#if ref.thumb}}
                            <img src="{{kankaFileUrl ref.thumb}}" alt="{{ref.name}}" />
                        {{/if}}
                    </div>

                    <h2 class="kanka-card-header">{{{ kankaLinkReference ref }}}</h2>

                    <div class="kanka-card-content">{{{ rel.relation }}}</div>
                </li>
            {{/with}}
        {{/with}}
    {{/each}}
</ul>