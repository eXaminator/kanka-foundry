{{~#if reference ~}}
    {{~#with (kankaFindReference value type) as | ref |~}}
        <dt {{#if ../isSecret}}class="-secret"{{/if}}>
            {{~#if ../rawLabel~}}
                {{~../rawLabel~}}
            {{~else~}}
                {{~ kankaLocalize 'journal' ../label ~}}
            {{~/if~}}
        </dt>
        <dd>{{{ kankaLinkReference ref }}}</dd>
    {{~/with~}}
{{~else~}}
    {{~#if value ~}}
        <dt {{#if isSecret}}class="-secret"{{/if}}>
            {{~#if rawLabel~}}
                {{~rawLabel~}}
            {{~else~}}
                {{~ kankaLocalize 'journal' label ~}}
            {{~/if~}}
        </dt>
        {{~#if localizeValue ~}}
            <dd>{{ kankaLocalize 'journal' localizeValue value }}</dd>
        {{~else~}}
            <dd>{{ kankaNl2br value }}</dd>
        {{~/if~}}
    {{~/if~}}
{{~/if~}}