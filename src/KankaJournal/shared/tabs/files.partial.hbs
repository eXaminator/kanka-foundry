<ul class="kanka-cards">
{{#each (kankaFilterBy (kankaFilterAccessible entity.entity_files) 'type' 'regex:^image/.*')}}
    <li class="kanka-card {{#if (kankaIsSecret this) }}-secret{{/if}}">
        <h2 class="kanka-card-header">{{ this.name }}</h2>

        <div class="kanka-card-content">
            <a href="{{ this.path }}" target="_blank">
                <img src="{{this.path}}" alt="{{this.name}}" />
            </a>
        </div>
    </li>
{{/each}}
{{#each (kankaFilterBy (kankaFilterAccessible entity.entity_files) 'type' 'regex:^image/.*' true)}}
    <li class="kanka-card {{#if (kankaIsSecret this) }}-secret{{/if}}">
        <div class="kanka-avatar">
            <span>{{ kankaFileIcon this.type }}</span>
        </div>

        <h2 class="kanka-card-header">{{ this.name }}</h2>

        <div class="kanka-card-actions">
            <a href="{{ this.path }}" class="kanka-button" target="_blank">
                <i class="fas fa-external-link-alt"></i>
                {{ kankaLocalize 'journal' 'shared' 'action' 'openLink' }}
            </a>
        </div>
    </li>
{{/each}}
</ul>