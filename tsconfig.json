{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["dom", "dom.iterable", "ES2023"],
        "strictNullChecks": true,
        "strict": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "useUnknownInCatchVariables": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "noEmit": true,
        "types": ["fvtt-types"]
    },
    "include": [
        "src/**/*",
        "build/**/*",
    ],
}
