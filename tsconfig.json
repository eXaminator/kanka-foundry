{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "lib": [
            "dom",
            "dom.iterable",
            "es2020",
        ],
        "strictNullChecks": true,
        "strict": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "isolatedModules": true,
        "types": [
            "vitest/globals"
        ]
    }
}
