{
    "$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noRedeclare": "off",
                "noExplicitAny": "warn"
            },
            "complexity": {
                "noThisInStatic": "off"
            }
        },
        "ignore": [
            "node_modules",
            "dist",
            "build",
            "coverage",
            "**/*.test.ts",
            "**/*.test.js",
            "**/*.spec.ts",
            "**/*.spec.js",
            "src/styles.css"
        ]
    },
    "formatter": {
        "enabled": false,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    }
}
